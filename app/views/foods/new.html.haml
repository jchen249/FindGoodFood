%h2 Create New Food

= link_to 'Back to restaurant page', restaurant_path(@restaurant_id)

= form_tag create_food_path do

  = label :food, :name, 'Name'
  = text_field :food, 'name'
  
  = label :food, :price, 'Price'
  = text_field :food, 'price'
  
  = label :food, :tags, 'Tags'
  = text_field :food, 'tags'

  = submit_tag 'Save Changes', :name => "restaurant_id[#{@restaurant_id}]"
