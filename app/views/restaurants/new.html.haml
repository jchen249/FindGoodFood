%h2 Create New Restaurant

= form_tag restaurants_path do

  = label :restaurant, :name, 'Name'
  = text_field :restaurant, 'name'
  
  = label :restaurant, :address, 'Address'
  = text_field :restaurant, 'address'
  
  = label :restaurant, :phone_number, 'Phone Number'
  = text_field :restaurant, 'phone_number'
  
  = label :restaurant, :description, 'Description'
  = text_field :restaurant, 'description'

  = submit_tag 'Save Changes'
